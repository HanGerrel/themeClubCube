<div class="col-xs-6 col-md-4">
	<div class="thumbnail">
		[[+img:notempty=`
		<img data-src="[[+img:pthumb=`w=300&h=200&zc=c&f=jpg`]]" alt="[[+pagetitle:htmlent]]">
		`:default=`
		<img data-src="holder.js/300x200" alt="[[+pagetitle:htmlent]]">
		`]]
		<div class="caption">
			<h2>[[+pagetitle]]</h2>
			<p>[[+introtext]]</p>
			<p><a href="[[~[[+id]]]]" class="btn btn-primary" [[+link_attributes:notempty=``:default=`title="[[+pagetitle]]"`]]>More</a></p>
		</div>
	</div>
</div>